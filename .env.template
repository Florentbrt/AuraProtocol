# AuraProtocol Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================================================
# API KEYS
# ==============================================================================

# Alpha Vantage API Key (required for price data fetching)
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# ==============================================================================
# CHAINLINK CONFIGURATION
# ==============================================================================

# Smart Contract Address (deployed AuraProtocol contract)
AURA_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Chainlink DON Network
CHAINLINK_NETWORK=testnet

# ==============================================================================
# ALERTING & WEBHOOKS
# ==============================================================================

# Webhook URL for volatility alerts
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Slack webhook (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email notification (optional)
ALERT_EMAIL=compliance@yourcompany.com

# ==============================================================================
# PERFORMANCE TUNING
# ==============================================================================

# HTTP request timeout (milliseconds)
HTTP_TIMEOUT=30000

# Maximum retry attempts
MAX_RETRIES=3

# Cache TTL (seconds)
CACHE_TTL=60

# ==============================================================================
# RISK PARAMETERS (override config.json)
# ==============================================================================

# High volatility threshold (percentage)
HIGH_VOLATILITY_THRESHOLD=2.0

# Extreme volatility threshold (percentage)
EXTREME_VOLATILITY_THRESHOLD=5.0

# Enable circuit breaker
CIRCUIT_BREAKER_ENABLED=true

# ==============================================================================
# DEVELOPMENT/DEBUG
# ==============================================================================

# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Enable verbose logging
VERBOSE=false

# Enable performance metrics
ENABLE_METRICS=true

# ==============================================================================
# SECURITY
# ==============================================================================

# API rate limiting (requests per minute)
RATE_LIMIT=5

# Enable HTTPS enforcement
ENFORCE_HTTPS=true

# Minimum TLS version
MIN_TLS_VERSION=1.2
